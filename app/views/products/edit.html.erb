<h1>Edit a Hug or High Five</h1>


<%= form_tag "/products/#{@product.id}", method: 'put' do %>
  <p>
    <%= label_tag :title, "Type of Hug" %>
    <%= text_field_tag :title, @product.title, size: 80, placeholder: "Enter hug type here..." %>
  </p>
  <p>
    <%= label_tag :description, "Description" %>
    <%= text_field_tag :description, @product.description, size: 100, placeholder:"Enter description here... " %>
  </p>
   <p>
    <%= label_tag :detail, "Hug detail" %>
    <%= text_area_tag :detail, @product.detail, size: "100x10", placeholder:"Enter detail here... "%>
  </p>
  <p>
    <%= label_tag :size, "Size of Touch" %>
    <%= select_tag :size, options_from_collection_for_select(Size.all, :id, :size) %>
</p>
 <p>
    <%= label_tag :price, "Price" %>
    <%= text_field_tag :Price, @product.price, size: 10, placeholder:" " %>
  </p>
  <%= submit_tag "Submit" %>

<% end %>
